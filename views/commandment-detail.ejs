	<h1>
		<%=params.id%>. <%=commandment.title%>
	</h1>
	<h3><%-commandment.body%></h3>
	<nav class="commandment-nav">
		<a href="/commandment/<%=params.id-1%>" class="nav-prev <%=params.id == 1 ? 'disabled' : ''%>"> < </a>
		<%i = 0; while(i<10){ i++%>
			<a href="/commandment/<%=i%>" class="nav-num <%=params.id == i ? 'active' : ''%>"> . </a>
		<%}%>
		<a href="/commandment/<%=Number(params.id)+1%>" class="nav-next <%=params.id == 10 ? 'disabled' : ''%>"> > </a>
	</nav> 
</header>

	<div class="page-content comments-container">
				<h4>Commentary</h4>
				<form class="form new-commment">
					<div class="form-group">
						<label for="title">Title</label>
						<input type="text" name="title" class="form-control" id="title" placeholder="Title" required>			  	
					</div>
					<div class="form-group">
						<textarea class="form-control" rows="5" name="body" placeholder="Write your commentary" required></textarea>
					</div>
					<div class="form-group row">
					  <div class="col-md-6">
						  <label for="name">Name</label>
						  <input type="text" class="form-control" name="name" id="name" placeholder="name" required>			  	
					  </div>
					  <div class="col-md-6">
						  <label for="email">Email</label>
						  <input type="email" class="form-control" name="email" id="email" placeholder="email" required>			  	
					  </div>
					</div>
					<input type="hidden" name="id" value="<%=params.id%>"/>
					<input type="hidden" name="date" value="<%=(new Date())%>"/>
					<button type="submit" class="btn btn-default">Submit</button>
				</form>
				
<%if(commandment.comments && commandment.comments.length){%>
				<ul class="comments-list list-unstyled">
					
					
		<%commandment.comments.forEach(function(comment){%>
			<li class="row">
						<div class="comment-meta col-md-3">
							<span class="comment-name">
								<%if(comment.email){%>
									<a href="mailto:<%=comment.email%>">
								<%}%>
									<%=comment.name%>
								<%if(comment.email){%>
									</a>
								<%}%>
							</span>
							<span class="comment-date"><%=comment.date%></span>							
						</div>
						<div class="comment-body col-md-9">
							<h5><%=comment.title%></h5>
							<%-comment.body%>
						</div>						
					</li>
		<%});%>
		</ul>
	<%}else{%>
			Be the first to comment
	<%}%>



			</div>

		</div>

